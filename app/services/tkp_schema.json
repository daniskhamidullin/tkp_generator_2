{
  "type": "object",
  "required": ["client", "project", "scope", "commercial", "legal"],
  "properties": {
    "client": {
      "type": "object",
      "required": ["name", "contact_name", "email"],
      "properties": {
        "name": { "type": "string" },
        "inn": { "type": "string" },
        "kpp": { "type": "string" },
        "contact_name": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "phone": { "type": "string" }
      }
    },
    "project": {
      "type": "object",
      "required": ["title", "summary", "deadline"],
      "properties": {
        "title": { "type": "string" },
        "summary": { "type": "string" },
        "deadline": { "type": "string", "description": "ДД.ММ.ГГГГ" }
      }
    },
    "scope": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["item", "qty", "unit", "price"],
        "properties": {
          "item": { "type": "string" },
          "desc": { "type": "string" },
          "qty": { "type": "number" },
          "unit": { "type": "string" },
          "price": { "type": "number" }
        }
      }
    },
    "commercial": {
      "type": "object",
      "required": ["currency", "vat_included", "payment_terms"],
      "properties": {
        "currency": { "type": "string", "enum": ["RUB", "USD", "EUR"] },
        "vat_included": { "type": "boolean" },
        "discount_percent": { "type": "number" },
        "payment_terms": { "type": "string" }
      }
    },
    "legal": {
      "type": "object",
      "required": ["valid_until", "warranty"],
      "properties": {
        "valid_until": { "type": "string", "description": "ДД.ММ.ГГГГ" },
        "warranty": { "type": "string" },
        "liability": { "type": "string" }
      }
    },
    "signatures": {
      "type": "object",
      "properties": {
        "supplier_sign": { "type": "string" },
        "client_sign": { "type": "string" }
      }
    }
  }
}
